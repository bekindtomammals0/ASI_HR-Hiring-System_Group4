@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager

<div style="width: 100%; height: fit-content; background-color: white; padding-top: 1rem; padding-bottom: 1rem; box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25);">
<nav class="navbar navbar-expand-lg navbar-light scrolling-navbar">
    <div class="container">
        <!-- Nav-Logo -->
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img id="logo-img"
                    src="https://asi-ees.com/pos_article/2018-q2/images/logo-asi.png"
                    width="150px"
                    loading="lazy" />
        </a>
        <!-- Nav-Logo -->
        <!-- Toggle Button -->
        <button class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navButtonsRight"
                aria-controls="navButtonsRight"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Toggle Button -->
        <!-- Collapse Navbar Options -->
        <div class="collapse navbar-collapse" id="navButtonsRight">
            <ul class="navbar-nav ms-5 me-auto mb-2 mb-lg-0">
                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))  //admin signed in
                {
                        
                }  
                else if (signInManager.IsSignedIn(User))    //user signed in
                {
                        
                }
                else    //none signed in
                {
                        
                }
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-link-href" asp-area="" asp-controller="JobOpening" asp-action="Index">Job Openings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-link-href" asp-area="" asp-controller="Scheduler" asp-action="Index">Scheduler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="ApplicationForm" asp-action="Index">Application Form</a>
                </li>
            </ul>
            <div class="d-flex align-items-center">
                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))  //admin signed in
                {
                    <li class="nav-item">
                        <form id="logoutForm" class="form-inline" method="post" asp-action="logout" asp-controller="AccountManager">
                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout @User.Identity.Name</button>
                        </form>
                    </li>
                }
                else if (signInManager.IsSignedIn(User))    //user signed in
                {
                    <li class="nav-item">
                        <form id="logoutForm" class="form-inline" method="post" asp-action="logout" asp-controller="AccountManager">
                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout @User.Identity.Name</button>
                        </form>
                    </li>
                }
                else    //none signed in
                {
                    <a class="nav-link text-dark" id="login" asp-controller="AccountManager" asp-action="LoginView">Login</a>
                    @*<a class="btn danger" asp-area="" asp-controller="Login" asp-action="Index" style="margin-right: 1rem;">
                        Login
                    </a>*@
                    <a class="nav-link text-dark" asp-controller="AccountManager" asp-action="Register">
                        Register
                    </a>
                }
                <li class="nav-item">
                    <a class="btn btn-danger" asp-controller="AccountManager" asp-action="EditUserRole">//Dev: Update User Roles</a>
                </li>
            </div>
        </div>
    </div>
</nav>
</div>
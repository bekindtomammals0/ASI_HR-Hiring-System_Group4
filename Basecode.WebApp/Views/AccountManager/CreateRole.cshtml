@using Basecode.Data.ViewModels;
@model CreateRoleViewModel

<h1>Create Role</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" asp-action="CreateRole" asp-controller="AccountManager">
                <h2>Create Role</h2>
                <hr />
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="RoleName" class="form-control" aria-required="true" placeholder="Role Name" />
                    <label asp-for="RoleName" class="form-label">Role Name</label>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Create Role</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

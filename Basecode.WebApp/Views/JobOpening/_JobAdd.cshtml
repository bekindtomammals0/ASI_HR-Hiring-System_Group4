@using Basecode.Data.Models
@using Basecode.Data.ViewModels
@model JobOpeningViewModel
@* For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860 *@


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width 600px">
        <div class="modal-content" style="display: flex; padding: 1rem; height: 650px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Create Job Opening</h5>
                <button type="button" class="close" style="border: 0px; background-color: white;"
                    data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" style="display: grid; grid-auto-flow: row;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="margin-bottom: 1rem;">
                        <label for="job-title" class="col-form-label">Job Title:</label>
                        <input asp-for="Title" type="text" class="form-control" id="job-title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 1rem;">
                        <label for="job-department" class="col-form-label">Description:</label>
                        <input asp-for="Description" type="text" class="form-control" id="job-department">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display: grid; margin-bottom: 2rem;">
                        <label for="job-requirements" class="col-form-label">Experience Level:</label>
                        <span asp-validation-for="ExperienceLevelID" class="text-danger"></span>
                        @Html.DropDownListFor(m => m.ExperienceLevelID, new SelectList(Model.ExperienceLevels, "Id",
                        "Level"), "Select Experience Level", new {@style="height: 50px"})
                    </div>
                    <div class="form-group" style="display: grid; margin-bottom: 2rem;">
                        <label for="job-requirements" class="col-form-label">Employment Type:</label>
                        @Html.DropDownListFor(m => m.EmploymentTypeID, new SelectList(Model.EmploymentTypes, "Id",
                        "Type"), "Select Employment Type", new {@style="height: 50px"})
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-danger" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
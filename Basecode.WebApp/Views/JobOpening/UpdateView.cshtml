@using Basecode.Data.ViewModels
@model JobOpeningViewModel

<body>
    <div>
        <h5>Update Job Opening</h5>
    </div>
    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="job-title" class="col-form-label">Job Title:</label>
            <input asp-for="Title" type="text" class="form-control" id="job-title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="job-department" class="col-form-label">Description:</label>
            <input asp-for="Description" type="text" class="form-control" id="job-department">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="experience-level" class="col-form-label">Experience Level:</label>
            @Html.DropDownListFor(m => m.ExperienceLevelID, new SelectList(Model.ExperienceLevels, "Id", "Name"), "Select Employment Type")

            @* <textarea asp-for="EmploymentType" class="form-
            @* <input asp-for="ExperienceLevel" type="text" class="form-control" id="experience-level">
            <span asp-validation-for="ExperienceLevel" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <label for="job-requirements" class="col-form-label">Employment Type:</label>
            @Html.DropDownListFor(m => m.EmploymentTypeID, new SelectList(Model.EmploymentTypes, "Id", "Name"), "Select Employment Type")

            @* <textarea asp-for="EmploymentType" class="form-control" id="job-requirements"></textarea>
            <span asp-validation-for="EmploymentType" class="text-danger"></span> *@
        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-danger" />
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
    </form>
</body>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@using Basecode.Data.Models
@using Basecode.Data.ViewModels
@model UserViewModel

<div style="padding: 0px;">

    <div class="main">
        <!--Menu-->
        <div class="menu">
            <div class="menu-section" style="height: 15%;">
                <img src="https://asi-ees.com/pos_article/2018-q4/images/logo-asi.png" alt="Logo" width="70%" style="margin-bottom: 2rem;">
            </div>
            <div class="menu-section" style="margin-bottom: 0px; padding-top: 3rem; border-top: 1px solid #9C9C9C;">
                <div style="display: flex; flex-direction: column;">
                    <a href="#" style="color: #EC5D5D; text-decoration: none; margin-bottom: 1rem; font-size: 18px;">Create New Account</a>
                    <a href="#" style="color: #EC5D5D; text-decoration: none; margin-bottom: 1rem; font-size: 18px;">User Management</a>
                </div>
            </div>
            <div class="menu-section" style="margin-bottom: 0px; margin-top: 100%; height: 50px;">
                <div style="display: flex; flex-direction: column;">
                    <a href="#" style="color: black; text-decoration: none; margin-bottom: 1rem; font-size: 18px;">Logout</a>
                </div>
            </div>
        </div>
        <!--Create User Form-->
        <div class="content">
            <div class="modal-dialog modal-dialog-centered" style="max-width: 100%; width: 60%;">
              <div class="modal-content" style="height: 80%; border: 0px;">
                  <div class="modal-header">
                    <h1 class="header-text" style="font-weight: 600; font-size: 50; margin-top: 15px; margin-left: 1rem;">Creating New User Account</h1>
                  </div>
                  <div class="modal-body" style="width: 80%; margin-left: 10%;">
                      <form asp-action="Add" style="display: grid; grid-auto-flow: row;">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <div class="form-group" style="margin-bottom: 1rem;">
                              <input asp-for="UserName" type="text" class="form-control" placeholder="Username"
                                     style="height: 3rem; background-color: #F7F7FD; border: 0px;">
                              <span asp-validation-for="UserName" class="text-danger"></span>
                          </div>
                          <div class="form-group" style="margin-bottom: 1rem;">
                              <input asp-for="Password" type="password" class="form-control" placeholder="Password"
                                     style="height: 3rem; background-color: #F7F7FD; border: 0px;">
                              <span asp-validation-for="Password" class="text-danger"></span>
                          </div>
                          <div class="form-group" style="margin-bottom: 1rem;">
                              <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password"
                                     style="height: 3rem; background-color: #F7F7FD; border: 0px;">
                              <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                          </div>
                          <div class="form-group" style="margin-bottom: 1rem;">
                              <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name"
                                     style="height: 3rem; background-color: #F7F7FD; border: 0px;">
                          </div>
                          <div class="form-group" style="margin-bottom: 1rem;">
                              <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name"
                                     style="height: 3rem; background-color: #F7F7FD; border: 0px;">
                          </div>
                          <div class="form-group" style="margin-bottom: 1rem;">
                              <input asp-for="Email" type="text" class="form-control" placeholder="Email"
                                     style="height: 3rem; background-color: #F7F7FD; border: 0px;">
                              <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                          </div>
                          <div class="form-group" style="margin-bottom: 1rem;">
                              <div class="btn-group" style="width: 100%; background-color: #F7F7FD;">
                                <button type="button"
                                        class="btn btn-danger dropdown-toggle"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false"
                                        style="text-align: left; color: #8C8C8C; border: 0px; background-color: #F7F7FD;">
                                  User
                                </button>
                                <div class="dropdown-menu">
                                  <a class="dropdown-item" href="#">Action</a>
                                  <a class="dropdown-item" href="#">Another action</a>
                                  <a class="dropdown-item" href="#">Something else here</a>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item" href="#">Separated link</a>
                                </div>
                              </div>
                          </div>
                          <div class="modal-footer" style="padding: 0px; padding-top: 1rem;">
                              <button type="button"
                                    class="btn danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#exampleModalCenter"
                                    style="height: 4rem; width: 7rem; padding: 5px; margin-left: 1rem;">
                                  Cancel
                              </button>
                              <button type="button"
                                    class="btn danger2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#exampleModalCenter"
                                    style="height: 4rem; width: 7rem; padding: 5px; margin-left: 1rem;">
                                  Create
                              </button>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
        </div>
    </div>
</div>

